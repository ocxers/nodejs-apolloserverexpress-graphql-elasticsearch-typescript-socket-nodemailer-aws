{
  "name": "trends-dashboard-be",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/app.js",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn typings && tsc",
    "dev:server": "ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpile-only --ignore-watch src/typings src/app",
    "dev": "concurrently \"yarn:dev:server\" \"yarn:npm-watch\" -n server,typings",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typings": "graphql-codegen --errors-only --config codegen.yml && echo generate GraphQL success || echo generate GraphQL failed",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "8.4.0",
    "@graphql-tools/schema": "^8.3.10",
    "@graphql-tools/utils": "^8.6.9",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "array.prototype.flatmap": "^1.3.0",
    "async": "^3.2.4",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "broadcast-channel": "^4.11.0",
    "dayjs": "^1.11.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.3",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.7.7",
    "nodemailer-plugin-inline-base64": "^2.1.1",
    "nodemailer-ses-transport": "^1.5.1",
    "object-hash": "^3.0.0",
    "request": "^2.88.2",
    "shelljs": "^0.8.4",
    "socket.io": "^4.4.1",
    "swig-email-templates": "^7.0.0",
    "ts-md5": "^1.3.1",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@graphql-codegen/cli": "2.2.1",
    "@graphql-codegen/typescript": "2.2.4",
    "@graphql-codegen/typescript-resolvers": "2.3.2",
    "@types/async": "^3.2.15",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.175",
    "@types/object-hash": "2.2.1",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsc": "^2.0.0",
    "husky": "^4",
    "lint-staged": "^11.2.3",
    "npm-watch": "^0.11.0",
    "prettier": "2.7.1",
    "tsc-files": "^1.1.2",
    "tsconfig-paths": "^3.11.0"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "watch": {
    "typings": {
      "patterns": "src/graphql/typeDefs",
      "extensions": "ts",
      "silent": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "prettier --write"
    ]
  }
}
